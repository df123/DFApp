@page
@using DFApp.Localization;
@using DFApp.Web.Pages.Media;
@using Microsoft.Extensions.Localization;
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@model DFApp.Web.Pages.Configuration.EditModalModel
@inject IStringLocalizer<DFAppResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="ConfigurationInfoDto" asp-page="/Configuration/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["ConfigurationInfo:Modal:Update:Title"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>