@page
@model DFApp.Web.Pages.Bookkeeping.Expenditure.ChartModel
@using DFApp.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<DFAppResource> L

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <abp-script src="/Pages/Bookkeeping/Expenditure/Chart.js"></abp-script>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["BookkeepingExpenditure:Chart:Monthly"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <select id="yearSelect" class="form-select" style="width: 120px; display: inline-block;">
                    @for (int year = DateTime.Now.Year; year >= 2020; year--)
                    {
                        <option value="@year">@year @L["Common:Year"]</option>
                    }
                </select>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <div>
            <canvas id="monthlyChart"></canvas>
        </div>
    </abp-card-body>
</abp-card>
