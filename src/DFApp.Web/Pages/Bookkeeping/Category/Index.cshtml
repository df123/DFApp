@page
@model DFApp.Web.Pages.Bookkeeping.Category.IndexModel
@using DFApp.Localization
@using DFApp.Permissions
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Authorization
@inject IStringLocalizer<DFAppResource> L
@inject IAuthorizationService AuthorizationService
@section scripts {
    <abp-script src="/Pages/Bookkeeping/Category/Index.js"></abp-script>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["BookkeepingCategory:Title"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (await AuthorizationService.IsGrantedAsync(DFAppPermissions.BookkeepingCategory.Create))
                {
                    <abp-button id="NewBookButton"
                                text="@L["NewBook"].Value"
                                icon="plus"
                                button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="CategoryTable"></abp-table>
    </abp-card-body>
</abp-card>