@page
@using Microsoft.Extensions.Localization
@using DFApp.Localization
@using DFApp.Lottery
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@model DFApp.Web.Pages.Lottery.Simulation.GenerateRandomNumbersModalModel
@inject IStringLocalizer<DFAppResource> L

<form asp-page="/Lottery/Simulation/GenerateRandomNumbersModal">
    <abp-modal>
        <abp-modal-header title="@L["LotterySimulation:Generate:Title"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Input.Count" label="@L["LotterySimulation:Generate:Count"].Value" />
            <abp-select asp-for="Input.GameType" label="@L["LotterySimulation:Generate:GameType"].Value"
                       asp-items="@Html.GetEnumSelectList<LotteryGameType>()" />
            <abp-input asp-for="Input.TermNumber" label="@L["LotterySimulation:Generate:TermNumber"].Value" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
