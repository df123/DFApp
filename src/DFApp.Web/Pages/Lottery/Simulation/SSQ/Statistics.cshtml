@page
@using DFApp.Localization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@model DFApp.Web.Pages.Lottery.Simulation.StatisticsModel

@inject IStringLocalizer<DFAppResource> L

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <abp-script src="/Pages/Lottery/Simulation/SSQ/statistics.js"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["LotterySimulation:Statistics"]</abp-card-title>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <div class="row">
            <div class="col-md-12">
                <canvas id="statisticsChart"></canvas>
            </div>
        </div>
    </abp-card-body>
</abp-card>
