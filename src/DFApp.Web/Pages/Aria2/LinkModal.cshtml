@page
@model DFApp.Web.Pages.Aria2.LinkModalModel
@using DFApp.Localization;
@using DFApp.Web.Pages.Media;
@using Microsoft.Extensions.Localization;
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@inject IStringLocalizer<DFAppResource> L
@{
    Layout = null;
}

<script>
    var lTemp = abp.localization.getResource('DFApp');
    $('#CopyButton').click(function (e) {
        navigator.clipboard.writeText($('#ContentDto_Content').val());
        alert(lTemp('Aria2:CopySuccessMesage'));
    })
</script>

<abp-modal>
    <abp-modal-header title="@L["Aria2:Link:Title"].Value"></abp-modal-header>
    <abp-modal-body>
        <abp-input asp-for="ContentDto.Content"></abp-input>
    </abp-modal-body>
    <abp-modal-footer>
        <abp-button id="CopyButton"
                    text="@L["Aria2:Button:Copy"].Value"
                    icon="copy"
                    button-type="Primary" />
    </abp-modal-footer>
</abp-modal>
